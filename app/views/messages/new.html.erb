<div class="container">
  <div class="row justify-content-md-center align-middle">
    <div class="col-5 align-self-center mt-5">
      <h2 class="text-center">New Message</h2>
      <%= form_for(@message, url:messages_path, html: {method: :post}) do |f| %>

        <%= f.hidden_field :sender_id, :value => current_user.id %>
        <div class="form-group">
          <%= f.label :user %><br />
          <%= f.collection_select :receiver_id, User.all_except(current_user), :id, :user_stamp, {}, { :class => 'form-control', :required => true } %>
        </div>


        <div class="form-group">
          <%= f.label :message %><br />
          <%= f.text_area :message, :class => 'form-control', :rows => 3, :required => true %>
        </div>

        
        <div><%= f.submit "Send Message", :class => "btn btn-primary" %></div>
      <% end %>

    </div>
  </div>
</div>